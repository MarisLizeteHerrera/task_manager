<h1><%= @list.id ? 'Edit list' : 'Create list' %></h1>
<hr />
<br />
<%= form_with(model: @list, local: true, class: "ui form") do |f| %>
  <div class = "field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input" %>
  </div>
  <%= f.submit nil, class: "ui inverted green button" %>
<% end %>